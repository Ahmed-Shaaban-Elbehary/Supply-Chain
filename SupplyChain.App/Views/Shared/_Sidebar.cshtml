@using SupplyChain.Services;
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="~/images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Supply Chain</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            @*<div class="image">
            <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>*@
            <div class="info">
                <a href="#" class="d-block">Welcome @CurrentUser.GetUserName()</a>
            </div>
        </div>
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="#" data-nav="Products" class="nav-link">
                        <i class="nav-icon fas fa-box-open"></i>
                        <p class="cursor-pointer">
                            Products
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Product" asp-action="index" data-nav="index" class="nav-link">
                                <i class="nav-icon fas fa-info"></i>
                                <p class="cursor-pointer">Details</p>
                            </a>
                        </li>
                        @if (await CurrentUser.HasPermissionAsync("CanAddProduct"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Product" asp-action="Add" data-val="Add" class="nav-link">
                                    <i class="nav-icon fas fa-plus"></i>
                                    <p>Add New Product</p>
                                </a>
                            </li>
                        }
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-controller="Setup" asp-action="index" data-nav="index" class="nav-link">
                        <i class="nav-icon fas fa-cogs"></i>
                        <p class="cursor-pointer">Setup</p>
                    </a>
                </li>
                <li class="nav-item fixed-bottom">
                    <a asp-controller="Auth" asp-action="Logout" data-nav="index" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <p class="cursor-pointer">Logout</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>