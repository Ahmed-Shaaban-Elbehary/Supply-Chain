<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Supply Chain</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/adminlte/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/adminlte/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!--Current Page Context-->
        <input type="hidden" id="currentPage" value="@ViewContext.RouteData.Values["action"]?.ToString()" />

        <!-- Preloader -->
        @await Html.PartialAsync("_Preloader")

        <!-- Spinner -->
        @await Html.PartialAsync("_Spinner")

        <!-- Navbar -->
        @await Html.PartialAsync("_Navbar")

        <!-- Main Sidebar Container -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="container pt-5">
                @RenderBody()
            </div>
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        @await Html.PartialAsync("_Footer")
    </div>
    <!-- ./wrapper -->
    <!-- Scritps -->
    @await Html.PartialAsync("_Scripts")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
