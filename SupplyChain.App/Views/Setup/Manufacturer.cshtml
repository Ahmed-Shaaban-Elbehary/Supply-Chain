@using SupplyChain.App.ViewModels;
@model PagedViewModel<ManufacturerViewModel>
@{
    ViewData["Title"] = "Manufacturer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<div class="card" id="manufacturer-card">
    <div class="card-header">
        <h3 class="card-title">Products Manufacturer</h3>
        <button class="btn btn-small btn-outline-success float-right" id="open-productManufacturer-modal" data-toggle="modal" data-target="#general-partial-modal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div id="manufacturer-card-body" class="card-body">
        <table id="manufacturer-data-table" class="table table-bordered">
            <thead>
                <tr>
                    <th>I</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var manufacturer in Model.Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@manufacturer.Name</td>
                        <td>
                            <button id="edit-form-modal" type="button" class="btn btn-sm btn-warning" data-id="@manufacturer.Id"
                                    onclick="prmanufacturer.load_edit_modal(this.getAttribute('data-id'))">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button id="delete-item" type="button" class="btn btn-sm btn-danger text-light ml-1" data-id="@manufacturer.Id"
                                    onclick="prmanufacturer.delete_manufacturer_item(this.getAttribute('data-id'))">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    { count++; }
                }
                </>
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        @await Html.PartialAsync("~/Views/Pagers/_PagerManufacturer.cshtml", Model)
    </div>
</div>

<partial name="_PartialModal" />

