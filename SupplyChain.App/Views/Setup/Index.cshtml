@using SupplyChain.Services;
@{
    ViewData["Title"] = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <style>
        .setup-btn {
            width: -webkit-fill-available;
            height: 100px;
        }
    </style>
}
<div class="row">
    @if (await CurrentUser.HasPermissionAsync("CanAccessCategory"))
    {
        <div class="col-md-3">
            <a asp-action="Category" class="btn btn-outline-success btn-lg setup-btn">
            <i class="fas fa-sitemap pt-3"></i>
            <p>Category</p>
        </a>
    </div>
    }
    @if (await CurrentUser.HasPermissionAsync("CanAccessManufacturer"))
    {
        <div class="col-md-3">
            <a asp-action="Manufacturer" class="btn btn-outline-success btn-lg setup-btn">
                <i class="fas fa-industry pt-3"></i>
                <p>Manufacturer</p>
            </a>
        </div>
    }
    @if (await CurrentUser.HasPermissionAsync("CanAccessUser"))
    {
        <div class="col-md-3">
            <a asp-action="Users" class="btn btn-outline-success btn-lg setup-btn">
            <i class="fas fa-users-cog pt-3"></i>
            <p>Users</p>
        </a>
    </div>
    }
    @if (await CurrentUser.HasPermissionAsync("CanAddProduct"))
    {
        <div class="col-md-3">
            <a asp-controller="Product" asp-action="Add" class="btn btn-outline-success btn-lg setup-btn">
                <i class="nav-icon fas fa-plus pt-3"></i>
                <p>Add New Product</p>
            </a>
        </div>
    }
</div>

