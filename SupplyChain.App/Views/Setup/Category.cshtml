@using SupplyChain.App.ViewModels;
@model PagedViewModel<ProductCategoryViewModel>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["mTitle"] = "Add/Edit Category";
}

<div class="card" id="category-card">
    <div class="card-header">
        <h3 class="card-title">Products Categories</h3>
        <button class="btn btn-small btn-outline-success float-right" id="open-form-modal" data-toggle="modal" data-target="#general-partial-modal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div id="category-card-body" class="card-body">
        <div>
            <table id="page-content" class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <button id="edit-form-modal" type="button" class="btn btn-sm btn-warning" data-id="@category.Id"
                                        onclick="prcartegory.load_edit_modal(this.getAttribute('data-id'))">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button id="delete-item" type="button" class="btn btn-sm btn-danger text-light ml-1" data-id="@category.Id"
                                        onclick="prcartegory.delete_category_item(this.getAttribute('data-id'))">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                    </>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer clearfix">
        @await Html.PartialAsync("_Pager", Model)
    </div>
</div>
@await Html.PartialAsync("_PartialModal")
