@using SupplyChain.App.ViewModels;
@model ProductCategoryViewModel
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add Parent Category</h3>
    </div>
    <div class="card-body">
        <form class="AddCategory">
            <div class="form-group">
                <label asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-control rounded-0" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <button type="button" class="btn btn-block btn-outline-primary">Save</button>
    </div>
</div>