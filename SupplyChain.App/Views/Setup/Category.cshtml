@using SupplyChain.App.ViewModels;
@model PagedViewModel<ProductCategoryViewModel>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Products Categories</h3>
        <a @Url.Action("") class="btn btn-outline-success btn-sm float-right">Add NEW</a>
    </div>

    <div class="card-body">
        <div id="page-content">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                        </tr>
                    }
                    </>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer clearfix">
        @await Html.PartialAsync("_Pager", Model)
    </div>
</div>
