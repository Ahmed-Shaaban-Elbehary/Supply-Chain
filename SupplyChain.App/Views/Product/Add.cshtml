@using SupplyChain.App.ViewModels;
@model ProductViewModel;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add New Product</h3>
    </div>
    <form asp-action="AddNewProduct" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <div class="form-group">
                    <label>Upload Image</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input rounded-0" name="file" accept="image/*" required />
                            <label class="custom-file-label">Choose Image</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Name">Product Name</label>
                    <input asp-for="Name" class="form-control rounded-0" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control rounded-0" rows="3"></textarea>
            </div>
            <div class="form-group">
                <div class="col">
                    <label asp-for="Quantity">Quantity</label>
                    <input type="number" asp-for="Quantity" class="form-control rounded-0"
                           data-val="true" data-val-number="Please Enter Numbers Only!" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Price">Price / Roll</label>
                    <input asp-for="Price" type="number" class="form-control rounded-0"
                           data-val="true" data-val-number="Please Enter Numbers Only!" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.CountryOfOrigin,
                (IEnumerable<SelectListItem>)ViewBag.Countries, "Select a country",
                new { @class = "form-control rounded-0" })
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
