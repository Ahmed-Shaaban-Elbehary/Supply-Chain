@using SupplyChain.App.ViewModels;
@model ProductViewModel;
@{
    ViewData["Title"] = Model.ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool hasEvent = @Model.events.Count > 0;
}
@section Styles {
    <style>
        .product-img-card {
            width: 365px;
            height: 365px;
        }
    </style>
}

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="product-img-card" alt="@Model.ProductName">
    </div>
    <div class="col-md-8 align-self-center px-5">
    </div>
</div>

<input type="hidden" id="eventsCount" value="@hasEvent.ToString()">
<input type="hidden" id="productId" value="@Model.Id">
@if (hasEvent)
{
    <partial name="~/Views/Product/PartialViews/_EventsModalPartialView.cshtml" for="@Model.events" />
}

