@using SupplyChain.App.ViewModels;
@model PagedViewModel<ProductQuantityRequestViewModel>
@{
    ViewData["Title"] = "Additional Quantity Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<div class="card" id="category-card">
    <div class="card-header">
        <h3 class="card-title">Quantity Request</h3>
        <button class="btn btn-small btn-outline-success float-right" id="open-productCategory-modal" data-toggle="modal" data-target="#general-partial-modal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div id="category-card-body" class="card-body">
        <table id="categories-data-table" class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@item.ProductName</td>
                        <td>
                            <button id="edit-form-modal" type="button" class="btn btn-sm btn-warning" data-id="@item.Id"
                                    onclick="prcartegory.load_edit_modal(this.getAttribute('data-id'))">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button id="delete-item" type="button" class="btn btn-sm btn-danger text-light ml-1" data-id="@item.Id"
                                    onclick="prcartegory.delete_category_item(this.getAttribute('data-id'))">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    { count++; }
                }
                </>
            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        <partial name="~/Views/Pagers/_PagerRequests.cshtml" for="@Model" />
    </div>
</div>
<partial name="_PartialModal" />