@using SupplyChain.App.ViewModels;
@model IEnumerable<ProductViewModel>;
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <style>
        .available {
            color: #27ae60;
        }

        .not-available {
            color: #c0392b;
        }
    </style>
}
<div class="row justify-content-center">
    @{
        if (Model.Count() <= 0)
        {
            <h1 class="mt-5">There's no product inserted into database!, please contact admin!</h1>
        }
    }
</div>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="@item.ImageUrl" alt="product-image-@item.Name">
                <div class="card-body">
                    <h4 class="card-title text-bold">@item.Name</h4>
                    <p class="card-text text-truncate" style="max-width: 250px;">@item.Description</p>
                    <div>
                        <h5>&pound; @item.Price / Roll</h5>
                        <p>
                            @if (item.Quantity > 0)
                            {
                                <span class="available">In Stock <i class="fas fa-layer-group"></i> @item.Quantity Roll</span>
                            }
                            else
                            {
                                <span class="not-available">Not In Stock</span>
                            }
                        </p>
                    </div>
                    <a asp-action="ProductItem" asp-route-id="@item.Id" class="btn btn-block btn-outline-info">Pay Now</a>
                </div>
            </div>
        </div>
    }
</div>